{
  "appId": "com.app.desktop",
  "productName": "app",
  "asar": {
    "smartUnpack": true
  },
  "compression": "maximum",
  "electronLanguages": ["en-US"],
  "removePackageScripts": true,
  "removePackageKeywords": true,
  "buildDependenciesFromSource": false,
  "npmRebuild": false,
  "nodeGypRebuild": false,
  "directories": {
    "output": "dist",
    "buildResources": "node_modules/react-native-electron-platform/src"
  },
  "publish": [
    {
      "provider": "generic",
      "url": "https://yourdomain.com/updates/"
    }
  ],
  "files": [
    "electron/**/*",
    "web-build/**/*",
    "package.json",
    "!**/*.map",
    "!**/*.md",
    "!**/test/**",
    "!**/__tests__/**",
    "!**/docs/**",
    "!**/locales/**",
    "!**/node_modules/react-native/**",
    "!**/node_modules/electron/**",
    "!**/node_modules/react-native-*/*",
    "node_modules/react-native-electron-platform/src/**/*",
    "node_modules/react-native-electron-platform/index.mjs"
  ],
  "asarUnpack": [
    "**/*.node"
  ],
  "extraMetadata": {
    "main": "node_modules/react-native-electron-platform/index.mjs"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "msi",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "ris",
    "artifactName": "${productName} Setup ${version}.${ext}"
  },
  "msi": {
    "oneClick": false,
    "perMachine": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "warningsAsErrors": false
  }
}
